@using DNP_FamilyOverview1.Models.Families

<div class="mt-3">
    <h4>Adult @AdultNum</h4>
</div>
<EditForm EditContext="@adultFormContext">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="d-flex flex-wrap justify-content-around">
        <div>
            <div class="form-group">
                <label for="firstname">First Name:</label>
                <InputText class="form-control" id="firstname" @bind-Value="@newAdult.FirstName" />
            </div>
            <div class="form-group">
                <label for="lastname">Last Name:</label>
                <InputText class="form-control" id="lastname" @bind-Value="@newAdult.LastName" />
            </div>
            <div class="form-group">
                <label for="job">Job Title:</label>
                <InputText class="form-control" id="job" @bind-Value="@newAdult.JobTitle" />
            </div>
            <div class="form-group">
                <label for="haircolor">Hair Color:</label>
                <InputText class="form-control" id="haircolor" @bind-Value="@newAdult.HairColor" />
            </div>
            <div class="form-group">
                <label for="eyecolor">Eye Color:</label>
                <InputText class="form-control" id="eyecolor" @bind-Value="@newAdult.EyeColor" />
            </div>
        </div>
        <div class="ml-md-3">
            <div class="form-group">
                <label for="age">Age:</label>
                <InputNumber class="form-control" id="age" @bind-Value="@newAdult.Age" />
            </div>
            <div class="form-group">
                <label for="weight">Weight:</label>
                <InputNumber class="form-control" id="weight" @bind-Value="@newAdult.Weight" />
            </div>
            <div class="form-group">
                <label for="height">Height:</label>
                <InputNumber class="form-control" id="height" @bind-Value="@newAdult.Height" />
            </div>
            <div class="form-group">
                <label for="sex">Sex:</label>
                <InputSelect class="form-control" id="sex" @bind-Value="@newAdult.Sex">
                    <option selected="selected" value="">Choose sex</option>
                    <option value="M">Male</option>
                    <option value="F">Female</option>
                    <option value="Other">Other</option>
                </InputSelect>
            </div>
        </div>
    </div>
</EditForm>

@code {
    [Parameter]
    public int AdultNum { get; set; }

    private Adult newAdult;

    [Parameter]
    public Adult TheAdult
    {
        get => newAdult;
        set => newAdult = value;
    }

    [Parameter]
    public EventCallback<Adult> TheAdultChanged { get; set; }


    private EditContext adultFormContext;

    [Parameter]
    public EditContext AdultFormContext
    {
        get => adultFormContext;
        set => adultFormContext = value;
    }

    [Parameter]
    public EventCallback<EditContext> AdultFormContextChanged { get; set; }

}
